<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:orientation="vertical"    android:layout_width="fill_parent"    android:layout_height="fill_parent"    android:weightSum="1">        <Button    android:id="@+id/emergency"    android:layout_width="600px"    android:layout_height="500px"    android:layout_gravity="center"    android:layout_margin="50px"    android:background="@android:color/holo_red_light"    android:text="Emergency" />        <LinearLayout        android:layout_width="wrap_content"        android:layout_height="200px"        android:orientation="horizontal">                <TextView        android:id="@+id/room"        android:layout_width="550px"        android:layout_height="match_parent"        android:layout_weight="1"        android:gravity="center"        android:text="Room Number"        android:textSize="24sp" />                <EditText        android:id="@+id/roomNumber"        android:layout_width="88dp"        android:layout_height="wrap_content"        android:ems="10"        android:inputType="number" />    </LinearLayout>        <LinearLayout        android:layout_width="match_parent"        android:layout_height="93dp"        android:orientation="horizontal">                <Button        android:id="@+id/button1"        android:layout_width="192dp"        android:layout_height="150px"        android:layout_gravity="center"        android:layout_margin="0dp"        android:layout_marginLeft="15px"        android:layout_marginRight="15px"        android:layout_marginStart="10px"        android:background="@android:color/holo_blue_light"        android:text="drink" />                <Button        android:id="@+id/button2"        android:layout_width="192dp"        android:layout_height="150px"        android:layout_gravity="center"        android:layout_marginLeft="20px"        android:layout_marginRight="15px"        android:layout_marginStart="10px"        android:background="@android:color/holo_green_light"        android:text="food" />    </LinearLayout>        <LinearLayout        android:layout_width="match_parent"        android:layout_height="85dp"        android:orientation="horizontal">                <Button        android:id="@+id/button3"        android:layout_width="192dp"        android:layout_height="150px"        android:layout_gravity="center"        android:layout_margin="0dp"        android:layout_marginLeft="15px"        android:layout_marginRight="15px"        android:layout_marginStart="10px"        android:background="@android:color/holo_orange_light"        android:text="function3" />                <Button        android:id="@+id/button4"        android:layout_width="192dp"        android:layout_height="150px"        android:layout_gravity="center"        android:layout_margin="0dp"        android:layout_marginLeft="15px"        android:layout_marginRight="20px"        android:layout_marginStart="10px"        android:background="@android:color/holo_purple"        android:text="function4" />            </LinearLayout>    </LinearLayout>