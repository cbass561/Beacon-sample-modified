<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:orientation="vertical"    android:layout_width="fill_parent"    android:layout_height="fill_parent"    android:weightSum="1">    <LinearLayout        android:layout_width="wrap_content"        android:layout_height="200px"        android:orientation="horizontal">        <TextView            android:id="@+id/room"            android:layout_width="550px"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center"            android:text="Room Number"            android:textSize="24sp" />        <EditText            android:id="@+id/roomNumber"            android:layout_width="88dp"            android:layout_height="wrap_content"            android:ems="10"            android:inputType="number" />    </LinearLayout>        <Button    android:id="@+id/emergency"    android:layout_width="360dp"    android:layout_height="250dp"    android:layout_gravity="center"    android:layout_marginBottom="50px"    android:theme="@style/AppTheme.Button.red"    android:textSize="35dp"    android:text="Emergency"/>    <LinearLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center"        android:orientation="horizontal">        <Button        android:id="@+id/button1"        android:layout_width="170dp"        android:layout_height="100dp"        android:layout_gravity="center"        android:layout_margin="0dp"        android:layout_marginStart="30dp"        android:theme="@style/AppTheme.Button.blue"        android:textSize="25dp"        android:text="water" />                <Button        android:id="@+id/button2"        android:layout_width="170dp"        android:layout_height="100dp"        android:layout_gravity="center"        android:layout_marginStart="20dp"        android:theme="@style/AppTheme.Button.green"        android:textSize="25dp"        android:text="food" />    </LinearLayout>        <LinearLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center"        android:orientation="horizontal"        android:layout_marginTop="16dp">                <Button        android:id="@+id/button3"        android:layout_width="170dp"        android:layout_height="100dp"        android:layout_gravity="center"        android:theme="@style/AppTheme.Button.orange"        android:textSize="25dp"        android:text="Bathroom" />                <Button        android:id="@+id/button4"        android:layout_width="170dp"        android:layout_height="100dp"        android:layout_gravity="center"        android:layout_marginStart="20dp"        android:theme="@style/AppTheme.Button.darkpurple"        android:textSize="25dp"        android:text="Other"/>    </LinearLayout>        <Button    android:id="@+id/nurseButton"    android:layout_width="360dp"    android:layout_height="75dp"    android:layout_marginTop="16dp"    android:theme="@style/AppTheme.Button.darkblue"    android:layout_gravity="center"    android:textSize="25dp"    android:text="Nurse Arrived" />    </LinearLayout>